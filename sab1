-- Gravity Booster
local gravityBooster = Instance.new("TextBox")
gravityBooster.Name = "Gravity Booster"
gravityBooster.PlaceholderText = "120"
gravityBooster.AnchorPoint = Vector2.one * 0.5
gravityBooster.Position = UDim2.fromScale(0.74, 0.78)
gravityBooster.Size = UDim2.fromScale(0.47, 0.24)
gravityBooster.TextScaled = true
gravityBooster.TextWrapped = true
gravityBooster.BackgroundColor3 = Color3.fromRGB(29, 29, 29)
gravityBooster.TextColor3 = Color3.fromRGB(12, 1, 94)
gravityBooster.Font = Enum.Font.SourceSansBold
gravityBooster.Parent = bkSBooster

-- Toggle functionality
toggle.MouseButton1Click:Connect(function()
    bkSHub.Visible = not bkSHub.Visible
    bkSBooster.Visible = not bkSBooster.Visible
end)
