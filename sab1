-- LocalScript version
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BKGui"
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = playerGui

-- Create BK's Hub
local bkSHub = Instance.new("Frame")
bkSHub.Name = "BK's Hub"
bkSHub.Visible = false
bkSHub.AnchorPoint = Vector2.one * 0.5
bkSHub.Size = UDim2.fromScale(0.1677, 0.4557)
bkSHub.Position = UDim2.fromScale(0.4516, 0.6203)
bkSHub.BackgroundColor3 = Color3.fromRGB(13, 13, 13)
bkSHub.BorderSizePixel = 0
bkSHub.Parent = screenGui

local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0.05, 0)
uicorner.Parent = bkSHub

-- TopBar
local topBar = Instance.new("Frame")
topBar.Name = "TopBar"
topBar.Size = UDim2.fromScale(1, 0.1)
topBar.Position = UDim2.fromScale(0, 0)
topBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
topBar.BorderSizePixel = 0
topBar.Parent = bkSHub

-- Hub Label
local bkSHubLabel = Instance.new("TextLabel")
bkSHubLabel.Text = "BK'S Hub"
bkSHubLabel.TextSize = 49
bkSHubLabel.TextColor3 = Color3.fromRGB(16, 107, 199)
bkSHubLabel.BackgroundTransparency = 1
bkSHubLabel.AnchorPoint = Vector2.new(0.5, 0.5)
bkSHubLabel.Position = UDim2.fromScale(0.5, 0.05)
bkSHubLabel.Size = UDim2.fromOffset(216, 31)
bkSHubLabel.TextScaled = true
bkSHubLabel.TextWrapped = true
bkSHubLabel.Font = Enum.Font.SourceSansBold
bkSHubLabel.Parent = bkSHub

-- Spin + InfJump Button
local spinInfJump = Instance.new("TextButton")
spinInfJump.Text = "Spin+InfJump"
spinInfJump.Size = UDim2.fromScale(0.9, 0.15)
spinInfJump.Position = UDim2.fromScale(0.5, 0.25)
spinInfJump.AnchorPoint = Vector2.new(0.5, 0.5)
spinInfJump.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
spinInfJump.TextColor3 = Color3.fromRGB(13, 89, 231)
spinInfJump.Font = Enum.Font.SourceSansBold
spinInfJump.TextScaled = true
spinInfJump.TextWrapped = true
spinInfJump.Parent = bkSHub

-- Toggle Button
local toggle = Instance.new("TextButton")
toggle.Text = "Toggle"
toggle.Size = UDim2.fromScale(0.1, 0.1)
toggle.Position = UDim2.fromScale(0.05, 0.1)
toggle.AnchorPoint = Vector2.new(0.5, 0.5)
toggle.BackgroundColor3 = Color3.fromRGB(29, 29, 29)
toggle.TextColor3 = Color3.fromRGB(1, 9, 162)
toggle.Font = Enum.Font.SourceSansBold
toggle.TextScaled = true
toggle.TextWrapped = true
toggle.Parent = screenGui

-- BK's Booster
local bkSBooster = Instance.new("Frame")
bkSBooster.Name = "BK's Booster"
bkSBooster.Visible = false
bkSBooster.AnchorPoint = Vector2.one * 0.5
bkSBooster.Size = UDim2.fromScale(0.3987, 0.2669)
bkSBooster.Position = UDim2.fromScale(0.7551, 0.535)
bkSBooster.BackgroundColor3 = Color3.fromRGB(13, 13, 13)
bkSBooster.BorderSizePixel = 0
bkSBooster.Parent = screenGui

-- WalkSpeed Booster
local walkSpeedBooster = Instance.new("TextBox")
walkSpeedBooster.Name = "WalkSpeed Booster"
walkSpeedBooster.PlaceholderText = "29"
walkSpeedBooster.AnchorPoint = Vector2.one * 0.5
walkSpeedBooster.Position = UDim2.fromScale(0.74, 0.38)
walkSpeedBooster.Size = UDim2.fromScale(0.45, 0.23)
walkSpeedBooster.TextScaled = true
walkSpeedBooster.TextWrapped = true
walkSpeedBooster.BackgroundColor3 = Color3.fromRGB(29, 29, 29)
walkSpeedBooster.TextColor3 = Color3.fromRGB(12, 1, 94)
