-- Buttons
local function createButton(name, text, pos, size, parent)
    local btn = Instance.new("TextButton", parent)
    btn.Name = name
    btn.Text = text
    btn.TextSize = 37
    btn.TextScaled = true
    btn.TextWrapped = true
    btn.AnchorPoint = Vector2.one * 0.5
    btn.Position = pos
    btn.Size = size
    btn.Font = Enum.Font.SourceSansBold
    btn.TextColor3 = Color3.fromRGB(13,89,231)
    btn.BackgroundColor3 = Color3.fromRGB(50,50,50)
    btn.BorderSizePixel = 0

    local uicorner = Instance.new("UICorner", btn)
    local uistroke = Instance.new("UIStroke", btn)
    uistroke.Thickness = 2.8
    uistroke.Color = Color3.fromRGB(255,255,255)

    local uigradient = Instance.new("UIGradient", uistroke)
    uigradient.Color = ColorSequence.new(Color3.fromRGB(19,15,231), Color3.fromRGB(51,139,255))

    return btn
end

local booster = createButton("Booster","Booster",UDim2.fromScale(0.5086,0.4306),UDim2.fromScale(0.8652,0.1361),bkSHub)
local spinInfJump = createButton("Spin+InfJump","Spin+InfJump",UDim2.fromScale(0.5083,0.226),UDim2.fromScale(0.8819,0.1471),bkSHub)

