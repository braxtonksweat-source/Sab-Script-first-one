-- üîÅ TOGGLE VISIBILITY
Toggle.MouseButton1Click:Connect(function()
	BKsHub.Visible = not BKsHub.Visible
	BKsBooster.Visible = not BKsBooster.Visible
end)

-- üñ± DRAG FUNCTION
local function draggable(frame)
	local dragging, dragStart, startPos

	frame.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = input.Position
			startPos = frame.Position

			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragging = false
				end
			end)
		end
	end)

	UIS.InputChanged:Connect(function(input)
		if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
			local delta = input.Position - dragStart
			local pos = UDim2.new(
				startPos.X.Scale,
				startPos.X.Offset + delta.X,
				startPos.Y.Scale,
				startPos.Y.Offset + delta.Y
			)
			TweenService:Create(frame, TweenInfo.new(0.15), {Position = pos}):Play()
		end
	end)
end

draggable(BKsHub)
draggable(BKsBooster)
draggable(Toggle)

-- üß• AUTO INVIS + CLONE LOGIC
local TOOL_1 = "Invisibility Cloak"
local TOOL_2 = "Quantum Cloner"
local running = false
local originalText = autoinvisclone.Text

local function equip(toolName)
	local char = player.Character or player.CharacterAdded:Wait()
	local hum = char:WaitForChild("Humanoid")
	local tool = player.Backpack:FindFirstChild(toolName) or char:FindFirstChild(toolName)
	if tool then
		hum:EquipTool(tool)
		task.wait(0.1)
		tool:Activate()
	end
end

autoinvisclone.MouseButton1Click:Connect(function()
	if running then return end
	running = true

	autoinvisclone.Text = "Invis..."
	equip(TOOL_1)

	task.wait(3)

	autoinvisclone.Text = "Cloning..."
	equip(TOOL_2)

	task.wait(0.5)
	autoinvisclone.Text = originalText
	running = false
end)

-- üèÉ WALKSPEED
WalkSpeedBooster.FocusLost:Connect(function()
	local v = tonumber(WalkSpeedBooster.Text)
	if v then
		local hum = (player.Character or player.CharacterAdded:Wait()):WaitForChild("Humanoid")
		hum.WalkSpeed = v
	end
end)

-- üåç GRAVITY
GravityBooster.FocusLost:Connect(function()
	local v = tonumber(GravityBooster.Text)
	if v then
		workspace.Gravity = v
	end
end)
